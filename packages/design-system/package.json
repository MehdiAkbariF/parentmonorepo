{
  "name": "@my-ds/design-system",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "**/*.scss",
    "dist/index.css"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json",
    "build:css": "sass --load-path=src src/index.scss dist/index.css --no-source-map",
    "build": "pnpm run clean && pnpm run build:ts && pnpm run build:css",
    "watch:css": "sass --watch src/index.scss dist/index.css",
    "dev": "tsc -w -p tsconfig.json"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^9.1.3",
    "@storybook/testing-library": "^0.2.2",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.1",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-lib-inject-css": "^2.2.2"
  }
}
